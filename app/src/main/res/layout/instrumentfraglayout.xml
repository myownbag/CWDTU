<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:aandroid="http://schemas.android.com/apk/res-auto">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_above="@+id/button_conner"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/but_layout_1998"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reg1998_lable">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="第一路通信参数"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_jiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/reg1998_lable">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="9">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_ins_baud_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="波特率:"/>
                        <TextView
                            android:id="@+id/tv_ins_baud_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_ins_baud_lable"
                            android:layout_toRightOf="@+id/tv_ins_baud_lable"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ins_paritybit_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="校验位:" />
                        <TextView
                            android:id="@+id/tv_ins_paritybit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ins_databit_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据位:" />
                        <TextView
                            android:id="@+id/tv_ins_databit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ins_stopbit_lable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="停止位:" />
                        <TextView
                            android:id="@+id/tv_ins_stopbit_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>




            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CFCFCF" />
        <RelativeLayout
            android:id="@+id/but_layout_1997"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reg1997_lable">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="第二路通信参数"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_jiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/reg1997_lable">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="9">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_ins_baud_lable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="波特率:"/>
                        <TextView
                            android:id="@+id/tv_ins_baud_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_ins_baud_lable"
                            android:layout_toRightOf="@+id/tv_ins_baud_lable"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ins_paritybit_lable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="校验位:" />
                        <TextView
                            android:id="@+id/tv_ins_paritybit_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ins_databit_lable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据位:" />
                        <TextView
                            android:id="@+id/tv_ins_databit_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_ins_stopbit_lable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="停止位:" />
                        <TextView
                            android:id="@+id/tv_ins_stopbit_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>




            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CFCFCF" />
        <RelativeLayout
            android:id="@+id/but_layout_1999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ins_1999_lable">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="数据记录频率(分)"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_jiantou"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_ins_1999_lable">
                <TextView
                    android:id="@+id/tv_ins_recodegap_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="仪表数据记录频率:  "/>
                <TextView
                    android:id="@+id/tv_ins_recodegap_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_ins_recodegap_lable" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_ins_recodegap_value"
                    android:text="  分钟"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CFCFCF" />

        <RelativeLayout
            android:id="@+id/but_layout_2000"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:focusableInTouchMode="true">

            <RelativeLayout
                android:id="@+id/tv_ins_2000_lable"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/ins_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="寄存器:" />

                <Spinner
                    android:id="@+id/ins_select_spiner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/ins_select_title" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_jiantou"
                    android:visibility="gone" />
            </RelativeLayout>

            <ListView
                android:id="@+id/tv_ins_2000_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_ins_2000_lable"
                android:divider="@null"
                android:listSelector="@android:color/transparent"></ListView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0.5dp"
            android:background="#CFCFCF" />

    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/button_conner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
       android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/tv_ins_btn_read"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:background="@drawable/round_button"
            android:text="读取数据"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>
